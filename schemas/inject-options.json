{
  "type": "object",
  "properties": {
    "url": {
      "type": "string"
    },
    "method": {
      "enum": ["HEAD", "GET", "POST", "PUT", "PATCH", "OPTIONS", "DELETE"]
    },
    "authority": {
      "type": "string",
      "default": "localhost"
    },
    "$usePrefix": {
      "type": "boolean",
      "default": true
    }
  },
  "required": ["url", "method"]
}
